<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
    <TableSelectDialog
		noDataText="{i18n>noData}"
		title="{i18n>request}"
		search=".onSearchRequest"
		confirm=".onSelectRequest"
		showClearButton="true"
		items= "{path : 'ZGW_MAINSTREAM_CATALOGS_SRV>/CustomerSet'}"
		contentHeight= "30%"
		contentWidth="30%"
		resizable="true">
		<ColumnListItem>
			<cells>
                <Text text="{ZGW_MAINSTREAM_CATALOGS_SRV>CustomerCode}"/>
                <Text text="{ZGW_MAINSTREAM_CATALOGS_SRV>Name1}"/>
                <Text text="{ZGW_MAINSTREAM_CATALOGS_SRV>CompanyCode}"/>
			</cells>
		</ColumnListItem>
		<columns>
			<Column minScreenWidth="Tablet" demandPopin="true" width="12em">
				<header>
					<Text text="{i18n>document}" />
				</header>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true" width="12em">
				<header>
					<Text text="{i18n>customer}" />
				</header>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true" width="12em">
				<header>
					<Text text="{i18n>code}" />
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>