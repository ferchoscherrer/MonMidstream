<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
    <TableSelectDialog
		noDataText="{i18n>noData}"
		title="{i18n>salesOrganization}"
		search=".onSearchSalesOrganization"
		confirm=".onSelectSalesOrganization"
		showClearButton="true"
		items= "{path : 'mCreateOrder>/salesOrganization'}"
		contentHeight= "30%"
		contentWidth="30%"
		resizable="true">
		<ColumnListItem>
			<cells>
                <Text text="{mCreateOrder>document}"/>
                <Text text="{mCreateOrder>name}"/>
			</cells>
		</ColumnListItem>
		<columns>
			<Column minScreenWidth="Tablet" demandPopin="true" width="12em">
				<header>
					<Text text="{i18n>code}" />
				</header>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true" width="12em">
				<header>
					<Text text="{i18n>description}" />
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>