<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
    <TableSelectDialog
		noDataText="{i18n>noData}"
		title="{i18n>currency}"
		search=".onSearchCurrency"
		confirm=".onSelectCurrency"
		showClearButton="true"
		items= "{path : 'mCreateOrder>/currency'}"
		contentHeight= "30%"
		contentWidth="30%"
		resizable="true">
		<ColumnListItem>
			<cells>
                <Text text="{mCreateOrder>currency}"/>
			</cells>
		</ColumnListItem>
		<columns>
			<Column minScreenWidth="Tablet" demandPopin="true" width="12em">
				<header>
					<Text text="{i18n>currency}" />
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>