<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
    <TableSelectDialog
		noDataText="{i18n>noData}"
		title="{i18n>estimationNumber}"
		search=".onSearchestimationNumber"
		confirm=".onSelectestimationNumber"
		showClearButton="true"
		items= "{
			path : 'ZSD_SALES_DOC_GET_SRV_01>/SalesOrderHeaderSet',
			parameters: {
				expand: 'SalesOrderItems'
			}
		}"
		contentHeight= "30%"
		contentWidth="30%"
		resizable="true">
		<ColumnListItem>
			<cells>
                <Text text="{ZSD_SALES_DOC_GET_SRV_01>DocNumber}"/>
                <Text text="{ZSD_SALES_DOC_GET_SRV_01>DocType}"/>
			</cells>
		</ColumnListItem>
		<columns>
			<Column minScreenWidth="Tablet" demandPopin="true" width="12em">
				<header>
					<Text text="{i18n>code}" />
				</header>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true" width="12em">
				<header>
					<Text text="{i18n>description}" />
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>