<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
    <TableSelectDialog
		noDataText="{i18n>noData}"
		title="{i18n>estimationNumber}"
		search=".onSearchEstimationNumber"
		confirm=".onSelectEstimationNumber"
		showClearButton="true"
		items= "{
			path : 'ZGW_MAINSTREAM_CATALOGS_SRV>/SalesOrderSet'
		}"
		contentHeight= "30%"
		contentWidth="50%"
		resizable="true">
		<ColumnListItem>
			<cells>
                <Text text="{ZGW_MAINSTREAM_CATALOGS_SRV>Vbeln}"/>
                <Text text="{ZGW_MAINSTREAM_CATALOGS_SRV>Auart}"/>
                <Text text="{ZGW_MAINSTREAM_CATALOGS_SRV>Vkorg}"/>
                <Text text="{ZGW_MAINSTREAM_CATALOGS_SRV>Kunnr}"/>
                <Text text="{ZGW_MAINSTREAM_CATALOGS_SRV>Waerk}"/>
			</cells>
		</ColumnListItem>
		<columns>
			<Column minScreenWidth="Tablet" demandPopin="true" width="12em">
				<header>
					<Text text="{i18n>estimationNumber}" />
				</header>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true" width="12em">
				<header>
					<Text text="{i18n>description}" />
				</header>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true" width="12em">
				<header>
					<Text text="{i18n>salesOrganization}" />
				</header>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true" width="12em">
				<header>
					<Text text="{i18n>request}" />
				</header>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true" width="12em">
				<header>
					<Text text="{i18n>currency}" />
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>